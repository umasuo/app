<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deviceTypeItemBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:background="@color/topBgColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/top_left_arrow_width"
            android:layout_height="@dimen/top_left_arrow_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/top_left_arrow_marginBot"
            android:layout_marginLeft="@dimen/top_left_arrow_marginLeft"
            android:layout_marginRight="@dimen/top_left_arrow_marginRight"
            android:layout_marginTop="@dimen/top_left_arrow_marginTop"
            android:background="@drawable/left_arrow" />

        <TextView
            android:id="@+id/device_power_up_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/powerUpDevice"
            android:textColor="@color/deviceTypeItemColor"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

    <ImageView
        android:id="@+id/device_light"
        android:layout_width="@dimen/device_power_up_pic_width"
        android:layout_height="@dimen/device_power_up_pic_height"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:src="@drawable/eva" />

    <Button
        android:id="@+id/next_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_power_up_btn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/device_power_up_btn_marginSide"
        android:layout_marginRight="@dimen/device_power_up_btn_marginSide"
        android:background="@color/deviceTypeItemBgColor"
        android:text="确定已经启动设备" />

</LinearLayout>