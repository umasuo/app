<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/editor_top"
    android:layout_height="@dimen/activity_top_height"
    android:background="@color/deviceTypeItemBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/editor_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:background="@color/topBgColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/editor_back"
            android:layout_width="@dimen/activity_top_icon_width"
            android:layout_height="@dimen/activity_top_icon_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_top_icon_margin"
            android:background="@drawable/left_arrow" />

        <TextView
            android:id="@+id/editor_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/editScene"
            android:textSize="@dimen/setting_title_size" />

        <TextView
            android:id="@+id/editor_save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_top_icon_height"
            android:layout_gravity="center"
            android:layout_marginRight="40px"
            android:text="@string/save" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/scene_editor_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/scene_editor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_add_condition"
                />

            <ImageView
                android:id="@+id/editor_add_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/editor_condition_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/editor_current_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_no_add_condition"
                />

            <ImageView
                android:id="@+id/editor_change_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_add_task"
                />
            <ImageView
                android:id="@+id/editor_add_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/editor_current_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editor_no_add_task"

                />
            <ListView
                android:id="@+id/editor_list_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>