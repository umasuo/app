<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editor_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/editor_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:background="@color/mainBackgroundColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/editor_back"
            android:layout_width="@dimen/activity_top_icon_width"
            android:layout_height="@dimen/activity_top_icon_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_top_icon_margin"
            android:background="@drawable/left_icon" />

        <TextView
            android:id="@+id/editor_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/editScene"
            android:textSize="@dimen/setting_title_size" />

        <TextView
            android:id="@+id/editor_save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_top_icon_height"
            android:layout_gravity="center"
            android:layout_marginRight="40px"
            android:text="@string/save" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pageBgColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/scene_editor_margin"
            android:layout_marginRight="@dimen/scene_editor_margin"
            android:layout_marginTop="40px"
            android:background="@drawable/corners_panel"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/scene_editor_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/scene_editor_icon"
                    android:layout_width="@dimen/scene_editor_icon_width"
                    android:layout_height="@dimen/scene_editor_icon_height" />

                <TextView
                    android:id="@+id/scene_editor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/scene_editor_margin" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scene_editor_item_height"
            android:layout_marginTop="@dimen/scene_editor_margin"
            android:background="@color/mainBackgroundColor"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/scene_editor_icon_width"
                android:layout_height="@dimen/scene_editor_icon_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/scene_editor_margin"
                android:background="@drawable/circle_icon"
                android:gravity="center"
                android:text="1"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/scene_editor_margin"
                android:layout_weight="1"
                android:text="@string/editor_add_condition" />

            <ImageView
                android:id="@+id/editor_add_condition"
                android:layout_width="@dimen/scene_editor_icon_width"
                android:layout_height="@dimen/scene_editor_icon_height"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/scene_editor_margin"
                android:background="@drawable/add_blue_icon" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/no_condition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scene_editor_item_height"
            android:layout_marginTop="@dimen/scene_editor_item_gap"
            android:background="@color/mainBackgroundColor"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editor_condition_icon"
                android:layout_width="@dimen/scene_editor_icon_width"
                android:layout_height="@dimen/scene_editor_icon_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/scene_editor_condition_icon_left" />

            <TextView
                android:id="@+id/editor_current_condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/scene_editor_margin"
                android:text="@string/editor_no_add_condition" />

            <ImageView
                android:id="@+id/editor_change_condition"
                android:layout_width="@dimen/scene_editor_icon_width"
                android:layout_height="@dimen/scene_editor_icon_height"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/scene_editor_item_height"
            android:layout_marginTop="@dimen/scene_editor_margin"
            android:background="@color/mainBackgroundColor"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/scene_editor_icon_width"
                android:layout_height="@dimen/scene_editor_icon_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/scene_editor_margin"
                android:background="@drawable/circle_icon"
                android:gravity="center"
                android:text="2"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/scene_editor_margin"
                android:layout_weight="1"
                android:text="@string/editor_add_task" />

            <ImageView
                android:id="@+id/editor_add_task"
                android:layout_width="@dimen/scene_editor_icon_width"
                android:layout_height="@dimen/scene_editor_icon_height"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/scene_editor_margin"
                android:background="@drawable/add_blue_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/no_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/scene_editor_item_gap"
            android:background="@color/mainBackgroundColor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editor_current_task"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/scene_editor_item_height"
                android:layout_marginLeft="@dimen/scene_editor_task_icon_left"
                android:gravity="center_vertical"
                android:text="@string/editor_no_add_task" />

            <ListView
                android:id="@+id/editor_list_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>