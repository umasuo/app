<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/deviceTypeItemBgColor"
    android:minHeight="@dimen/personal_type_item_height"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/personal_left_icon"
        android:layout_width="@dimen/personal_item_icon_width"
        android:layout_height="@dimen/personal_item_icon_height"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/personal_item_icon_margin" />

    <TextView
        android:id="@+id/personal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/device_type_icon_marginLeft"
        android:layout_weight="1"
        android:textColor="@color/deviceTypeItemColor"
        android:textSize="@dimen/personal_item_name_size" />

    <ImageView
        android:id="@+id/personal_right_arrow"
        android:layout_width="@dimen/personal_item_right_arrow_width"
        android:layout_height="@dimen/personal_item_right_arrow_height"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/device_type_arrow_marginRight"
        android:background="@drawable/right_arrow" />

</LinearLayout>