<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deviceTypeItemBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:background="@color/topBgColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/personal_info_back"
            android:layout_width="@dimen/top_left_arrow_width"
            android:layout_height="@dimen/top_left_arrow_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/top_left_arrow_marginBot"
            android:layout_marginLeft="@dimen/top_left_arrow_marginLeft"
            android:layout_marginRight="@dimen/top_left_arrow_marginRight"
            android:layout_marginTop="@dimen/top_left_arrow_marginTop"
            android:background="@drawable/left_arrow" />

        <TextView
            android:id="@+id/personal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_top_marginLeft"
            android:layout_weight="1"
            android:text="@string/personal_info"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/personal_info_portrait"
            android:layout_width="@dimen/head_portrait_width"
            android:layout_height="@dimen/head_portrait_height"
            android:layout_margin="@dimen/head_portrait_margin"
            android:background="@drawable/eva" />

        <EditText
            android:id="@+id/personal_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_top_marginLeft"
            android:layout_weight="1"
            android:hint="昵称"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/personal_info_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_top_marginLeft"
            android:layout_weight="1"
            android:hint="手机号"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/personal_info_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_top_marginLeft"
            android:layout_weight="1"
            android:hint="国家"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/personal_info_timezone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_top_marginLeft"
            android:layout_weight="1"
            android:hint="时区"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>


    <EditText
        android:id="@+id/personal_info_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_top_marginLeft"
        android:layout_marginTop="100px"
        android:hint="昵称"
        android:textSize="@dimen/setting_title_size"
        android:textStyle="bold"
        android:typeface="monospace" />

    <Button
        android:id="@+id/personal_info_singout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:text="退出登录" />

</LinearLayout>