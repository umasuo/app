<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/personal_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:background="@color/mainBackgroundColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_gravity="center"
            android:src="@drawable/left_icon" />

        <TextView
            android:id="@+id/personal_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="80px"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/personal_settings"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_marginBottom="40px"
        android:layout_marginTop="40px"
        android:background="@color/mainBackgroundColor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_weight="1"
            android:text="消息通知"
            android:textSize="58px" />

        <Switch
            android:id="@+id/msg_btn"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginRight="80px"
            android:layout_weight="4"
            tools:checked="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_marginBottom="4px"
        android:background="@color/mainBackgroundColor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_weight="1"
            android:text="声音"
            android:textSize="58px" />

        <Switch
            android:id="@+id/voice_btn"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_marginRight="80px"
            android:layout_weight="4"
            tools:checked="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_marginBottom="4px"
        android:background="@color/mainBackgroundColor"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:layout_weight="1"
            android:text="震动"
            android:textSize="58px" />

        <Switch
            android:id="@+id/shake_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:layout_weight="4"
            android:checked="true"
            android:showText="false"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Large"
            android:textOff="OFF"
            android:textOn="ON"
            android:textSize="58px"
            tools:checked="true" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="40px"
        android:background="@color/mainBackgroundColor"
        android:gravity="bottom"
        android:orientation="horizontal">


        <Button
            android:id="@+id/signout_btn"
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_weight="4"
            android:background="@color/mainBackgroundColor"
            android:text="退出登录"
            android:textColor="#26a6ff"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>