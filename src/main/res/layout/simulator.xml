<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_top_height"
    android:background="@color/deviceTypeItemBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:background="@color/mainBackgroundColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_top_marginLeft"
            android:layout_weight="3"
            android:gravity="center"
            android:text="体验中心"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:background="@drawable/corners_panel"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260px"
                        android:layout_gravity="center"
                        android:src="@drawable/device_img_kg" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="160px"
                        android:layout_gravity="center"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:text="智能开关"
                        android:textSize="58px" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40px"
                        android:src="@drawable/simulator_try_btn" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:background="@drawable/corners_panel"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260px"
                        android:layout_gravity="center"
                        android:src="@drawable/device_img_d_light" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="160px"
                        android:layout_gravity="center"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:text="智能白光灯"
                        android:textSize="58px" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40px"
                        android:src="@drawable/simulator_try_btn" />

                </LinearLayout>
            </LinearLayout>
            <!--row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:background="@drawable/corners_panel"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260px"
                        android:layout_gravity="center"
                        android:src="@drawable/device_img_dc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="160px"
                        android:layout_gravity="center"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:text="单插"
                        android:textSize="58px" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40px"
                        android:src="@drawable/simulator_try_btn" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:background="@drawable/corners_panel"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260px"
                        android:layout_gravity="center"
                        android:src="@drawable/device_img_d_light1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="160px"
                        android:layout_gravity="center"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:text="智能彩光灯"
                        android:textSize="58px" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40px"
                        android:src="@drawable/simulator_try_btn" />

                </LinearLayout>
            </LinearLayout>
            <!--row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="40px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:background="@drawable/corners_panel"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260px"
                        android:layout_gravity="center"
                        android:src="@drawable/device_img_pc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="160px"
                        android:layout_gravity="center"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:text="智能插排"
                        android:textSize="58px" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40px"
                        android:src="@drawable/simulator_try_btn" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="40px"
                    android:layout_marginTop="40px"
                    android:layout_weight="1"
                    android:background="@drawable/corners_panel"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="260px"
                        android:layout_gravity="center"
                        android:src="@drawable/sad_icon" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="160px"
                        android:layout_gravity="center"
                        android:layout_marginTop="20px"
                        android:gravity="center"
                        android:text="陆续添加中"
                        android:textSize="58px" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40px" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>