<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/scene_item_height"
    android:background="@color/deviceTypeItemBgColor"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgLeft"
        android:layout_width="@dimen/scene_item_icon_width"
        android:layout_height="@dimen/scene_item_icon_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/scene_item_icon_marginLeft"
        android:layout_marginRight="@dimen/scene_item_icon_marginRight" />

    <TextView
        android:id="@+id/text_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textColor="@color/deviceTypeItemColor" />

    <ImageView
        android:id="@+id/imgRight"
        android:layout_width="@dimen/scene_item_arrow_width"
        android:layout_height="@dimen/scene_item_arrow_height"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/scene_item_arrow_marginRight"
        android:background="@drawable/right_arrow" />

</LinearLayout>