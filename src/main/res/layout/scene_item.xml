<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainBackgroundColor"

    android:minHeight="200px"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/scene_icon"
        android:layout_width="@dimen/scene_item_icon_width"
        android:layout_height="@dimen/scene_item_icon_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/scene_name"
        android:layout_width="wrap_content"
        android:layout_height="160px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20px"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:text="智能场景"
        android:textColor="@color/deviceTypeItemColor"
        android:textSize="50px" />

    <ImageView
        android:id="@+id/action_img"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="40px"
        android:layout_weight="2"
        android:src="@drawable/action_gray" />

</LinearLayout>