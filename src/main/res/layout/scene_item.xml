<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/deviceTypeItemBgColor"
    android:minHeight="@dimen/scene_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/scene_left_icon"
        android:layout_width="@dimen/scene_item_icon_width"
        android:layout_height="@dimen/scene_item_icon_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/scene_item_icon_marginLeft"
        android:layout_marginRight="@dimen/scene_item_icon_marginRight" />

    <TextView
        android:id="@+id/scene_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="20px"
        android:layout_weight="8"
        android:textColor="@color/deviceTypeItemColor"
        android:textSize="50px" />

    <TextView
        android:id="@+id/scene_action_btn"
        android:layout_width="@dimen/scene_item_icon_width"
        android:layout_height="@dimen/scene_item_icon_height"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="40px"
        android:layout_weight="0"
        android:text="执行"
        android:textColor="@color/deviceTypeItemColor" />

</LinearLayout>