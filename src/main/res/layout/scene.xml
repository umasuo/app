<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scene_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_top_height"
    android:background="@color/pageBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/scene_top_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:background="@color/mainBackgroundColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scene_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60px"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/intelligentScene"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/add_btn"
            android:layout_width="@dimen/activity_top_icon_width"
            android:layout_height="@dimen/activity_top_icon_height"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/activity_top_marginRight"
            android:background="@drawable/add_icon_press" />


    </LinearLayout>

    <ListView
        android:id="@+id/scene_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:divider="@color/pageBgColor"
        android:dividerHeight="10px"></ListView>


</LinearLayout>