<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_top_height"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/top_left_arrow_width"
            android:layout_height="@dimen/top_left_arrow_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/top_left_arrow_marginBot"
            android:layout_marginLeft="@dimen/top_left_arrow_marginLeft"
            android:layout_marginRight="@dimen/top_left_arrow_marginRight"
            android:layout_marginTop="@dimen/top_left_arrow_marginTop"
            android:background="@drawable/left_icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_top_marginLeft"
            android:layout_weight="1"
            android:text="@string/personal_forgot_password"
            android:textSize="@dimen/setting_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/country_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/input_margin_top"
            android:background="@drawable/input_bg"
            android:entries="@array/country_arrays"
            android:paddingLeft="30px" />

        <EditText
            android:id="@+id/phone_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/input_margin_top"
            android:background="@drawable/input_bg"
            android:hint="手机号"
            android:inputType="phone"
            android:paddingLeft="30px" />

        <EditText
            android:id="@+id/password_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/input_margin_top"
            android:background="@drawable/input_bg"
            android:hint="输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="30px" />

        <EditText
            android:id="@+id/password_repeat_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="@dimen/input_margin_top"
            android:background="@drawable/input_bg"
            android:hint="重复新密码"
            android:inputType="textPassword"
            android:paddingLeft="30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/sms_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="50px"
                android:layout_marginRight="10px"
                android:layout_marginTop="@dimen/input_margin_top"
                android:layout_weight="5"
                android:background="@drawable/input_bg"
                android:hint="验证码"
                android:inputType="text"
                android:paddingLeft="30px" />

            <Button
                android:id="@+id/sms_get_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_height"
                android:layout_marginLeft="10px"
                android:layout_marginRight="50px"
                android:layout_marginTop="@dimen/input_margin_top"
                android:layout_weight="3"
                android:background="@drawable/blue_button_item"
                android:paddingLeft="30px"
                android:text="获取" />
        </LinearLayout>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_height"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="20px"
            android:background="@drawable/blue_button_item"
            android:text="找回密码" />
    </LinearLayout>

</LinearLayout>